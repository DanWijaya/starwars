<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="starwars.coding.com.ParkLah.Search.SearchActivity">


    <LinearLayout
        android:id="@+id/search_activity_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_activity_search_bar"
            android:background="@drawable/search_bar_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="3dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/search_activity_toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:title="Search..."
                />

            <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:id="@+id/search_activity_SearchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBackground"
                android:hint="@string/search_hint"
                android:textColorHint="@color/colorBackground"/>

        </FrameLayout>


        <Spinner
            android:id="@+id/sort_options_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/sort_by_spinner_background"
            android:elevation="2dp"
            android:prompt="@string/sort_prompt"
            android:entries="@array/sort_list"
            android:gravity="center"
            android:padding="3dp"
            android:popupBackground="@color/GoogleBlue"
            android:spinnerMode="dropdown"/>


    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/GoogleBlue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/search_activity_recyclerView">
    </android.support.v7.widget.RecyclerView>

